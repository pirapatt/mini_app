<view style="display: flex; flex-direction: column; height: 100%;">
  <!-- ส่วนบน: แสดง WebView เมื่อ showWebview เป็น true -->
  <view style="flex: 1; border: 2px solid #000000; border-radius: 10px; margin: 10px;">
    <web-view src="{{url}}" bindmessage="onMessageFromWebview"></web-view>
  </view>

  <!-- ส่วนล่าง: ปุ่มเพื่อส่งข้อความไปยัง WebView -->
  <view style="padding: 10px;">
    <button bindtap="sendToWebview">Send Message to WebView</button>
  </view>
</view>
